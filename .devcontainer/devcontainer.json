{
  "name": "Bazzite Portal Development",
  "image": "fedora:latest",
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    }
  },
  
  "postCreateCommand": "sudo dnf install -y flatpak flatpak-builder && flatpak remote-add --if-not-exists --user flathub https://flathub.org/repo/flathub.flatpakrepo && flatpak install -y --user org.gnome.Platform//48 org.gnome.Sdk//48",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "redhat.vscode-yaml",
        "bierner.markdown-preview-github-styles"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3"
      }
    }
  },
  
  "remoteUser": "vscode",
  
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind"
  ],
  
  "runArgs": [
    "--device=/dev/dri"
  ],
  
  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}"
  }
}
